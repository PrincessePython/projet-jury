{% extends 'base.html.twig' %}

{% block title %}Mon profil - Playducatif - spécialiste des jeux éducatifs{% endblock %}

{% block body %}
<div class="container rounded bg-white mt-5 mb-5">
    <div class="row">
        <div class="col-md-3 border-right">
            <div class="d-flex flex-column align-items-center text-center p-3 py-5">
            <img class="rounded-circle mt-5" width="150px" src="{{ asset("ressources/images/blank-profile-picture-640x640.png") }}">
            <span class="my-3">Mon profil</span>
            </div>
        </div>

        <div class="col-md-5 border-right">
            <div class="p-3 py-5">
                <div class="d-flex justify-content-between align-items-center my-3">
                    <h4 class="text-right">Mes informations</h4>
                </div>

                <div class="row my-2">
                    <div class="col-md-12 my-2"><label class="labels me-3">Prénom:</label>{{ user.firstName }}</div>
                    <div class="col-md-12 my-2"><label class="labels me-3">Nom:</label>{{ user.lastName }}</div>
                    <div class="col-md-12 my-2"><label class="labels me-3">Date de naissance:</label>{{ user.dateOfBirth|date("m/d/Y") }}</div>
                    <div class="col-md-12 my-2"><label class="labels me-3">Email:</label>{{ user.email }}</div>
                </div>
                <div class="mt-5 text-center"><a href="{{ 'modify' }}" class="btn btn-success">Ajouter mon adresse de livraison</a></div>
            </div>
        </div>
        <div class="col-md-4 my-3">
            <div class="p-3 py-5">
                <div class="d-flex justify-content-between align-items-center my-2"><a href="{{ path('profile') }}" class="btn">Mon profil</a></div>
                <div class="d-flex justify-content-between align-items-center my-2"><a href="{{ path('modify') }}" class="btn">Mon Adresse</a></div>
            </div>
        </div>
    </div>
</div>
</div>
</div>
{% endblock %}
